{
  "name": "@gunubin/simple-babel-library-template",
  "description": "Babel and flow for npm library",
  "version": "0.0.0-development",
  "author": "gunubin",
  "ava": {
    "babel": "inherit",
    "files": [
      "test/*spec.js",
      "src/**/__tests__/*.spec.js"
    ],
    "verbose": true,
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "lodash": "^4.17.4",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.13.1",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-flowtype": "^2.40.1",
    "flow-bin": "^0.61.0",
    "flow-copy-source": "^1.2.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "power-assert": "^1.4.4",
    "semantic-release": "^8.2.0"
  },
  "files": [
    "lib"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gunubin/simple-babel-library-template"
  },
  "scripts": {
    "build": "npm-run-all build:*",
    "build:flow": "flow-copy-source src lib",
    "build:js": "NODE_ENV=production babel src --out-dir lib --source-maps inline",
    "coverage": "nyc report --reporter=lcov --reporter=text && codecov",
    "lint:flow": "flow src",
    "lint:js": "eslint src test",
    "start": "nodemon src --exec babel-node",
    "test": "npm-run-all lint:* test:*",
    "test:ava": "NODE_ENV=test nyc ava",
    "watch": "babel src --out-dir lib --watch --source-maps inline",
    "watch:ava": "NODE_ENV=test ava --watch",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  }
}
